<Window x:Class="WpfApp6.order_requests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="Window1" Height="1024" Width="1920"
        Background="White">
    <Grid>
        <!-- Left Panel (Profile and Buttons) -->
        <Grid Background="#EAEAEA" Width="300" HorizontalAlignment="Left">
            <StackPanel VerticalAlignment="Top">
                <!-- Profile Section -->
                <Ellipse Width="100" Height="100" Fill="Gray" Margin="100,20,100,10"/>
                <Button Content="OWAIS SHEHZAD" FontSize="16" FontFamily="Global Serif"
Foreground="#2c4375" HorizontalAlignment="Center" Click="ProfileButton_Click"/>
                <!-- Yellow Buttons -->
                <Button Background="#FFC107" BorderThickness="0" Content="DASHBOARD"  Foreground="#2c4375" FontFamily="Global Serif" Height="50" Margin="0,50,0,0" FontSize="24" Click="DashboardButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="MANAGE PROJECTS"  Foreground="#2c4375" FontFamily="Global Serif" Height="50" Margin="0,50,0,0" FontSize="24" Click="ManageProjectsButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="INVENTORY" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24" Click="InventoryButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="PROJECT HISTORY" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24"  Click="ProjectHistoryButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="PAYMENT MANAGEMENT" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24"  Click="PaymentManagmentButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="ORDER REQUESTS" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24"  Click="OrderRequestsButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="FEEDBACKS" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24" Click="FeedbacksButton_Click" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
        <!-- Main Content -->
        <StackPanel Margin="320,50,20,50">
            <TextBlock Text="ORDERS" FontSize="32" FontFamily="Global Serif"
                       Foreground="#2c4375" FontWeight="Bold" Margin="0,20,0,10"/>

            <!-- Feedback Form -->
            <Border Background="#EAEAEA" Padding="20" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>

                    <!-- Order ID -->
                    <TextBlock Text="CLIENT NAME" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Margin="0,5,0,35" Grid.RowSpan="2"/>
                    <Label Grid.Column="1" Width="150" Height="30" Margin="5" Background="White"/>

                    <!-- Client ID -->
                    <TextBlock Text="CLIENT ID" Grid.Row="1" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Margin="0,15,0,25" Grid.RowSpan="2"/>
                    <Label Grid.Row="1" Grid.Column="1" Width="150" Height="30" Margin="5" Background="White"/>

                    <!-- Rate -->
                    <TextBlock Text="ARTICLE NO" Grid.Row="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Margin="0,10,0,-10"/>
                    <Label Grid.Row="2" Grid.Column="1" Width="150" Height="30" Margin="5" Background="White"/>

                    <!-- Comments -->
                    <TextBlock Text="MATERIAL" Grid.Column="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.ColumnSpan="2" Margin="10,5,170,35" Grid.RowSpan="2"/>
                    <Label Grid.Column="3" Margin="10,5,10,35" Background="White" Grid.ColumnSpan="3" Grid.RowSpan="2"/>

                    <!-- Reasons -->
                    <TextBlock Text="SIZE" Grid.Column="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.ColumnSpan="2" Margin="10,21,170,19" Grid.RowSpan="2" Grid.Row="1"/>
                    <Label Grid.Column="3" Grid.RowSpan="2" Width="150" Height="30" Margin="10,20,20,30" Grid.Row="1" Background="White"/>
                    <Button Content="ACCEPT"  Background="#FFC107" Foreground="#2c4375" FontFamily="Global Serif" Height="30" FontSize="22" RenderTransformOrigin="0.737,-8.958" Grid.Column="4" Grid.ColumnSpan="2" Margin="72,9,32,-2" Grid.Row="2"/>
                    <Button Content="DECLINE"  Background="#FFC107" Foreground="#2c4375" FontFamily="Global Serif" Height="30" FontSize="22"  Grid.Column="6" Grid.ColumnSpan="2" Margin="25,11,70,-1" Grid.Row="2"/>
                </Grid>
            </Border>
            <TextBlock  Foreground="#2c4375" FontWeight="Bold" Margin="0,10,0,10"/>
            <Border Background="#EAEAEA" Padding="20" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>

                    <!-- Order ID -->
                    <TextBlock Text="CLIENT NAME" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Margin="0,10,0,30" Grid.RowSpan="2"/>
                    <Label Grid.Column="1" Background="White" Width="150" Height="30" Margin="5"/>

                    <!-- Client ID -->
                    <TextBlock Text="CLIENT ID" Grid.Row="1" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Margin="0,10,0,30" Grid.RowSpan="2"/>
                    <Label Grid.Row="1" Background="White" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Rate -->
                    <TextBlock Text="ARTICLE NO" Grid.Row="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Margin="0,10,0,-10"/>
                    <Label Grid.Row="2" Background="White" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Comments -->
                    <TextBlock Text="MATERIAL" Grid.Column="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.ColumnSpan="2" Margin="25,10,155,30" Grid.RowSpan="2" RenderTransformOrigin="0.678,0.489"/>
                    <Label Grid.Column="3" Background="White" Margin="10,0,10,0" Grid.ColumnSpan="3"/>

                    <!-- Reasons -->
                    <TextBlock Text="SIZE" Grid.Column="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.ColumnSpan="2" Margin="25,26,155,14" Grid.RowSpan="2" Grid.Row="1"/>
                    <Label Grid.Column="3" Background="White" Grid.RowSpan="2" Width="150" Height="30" Margin="15,26,15,24" Grid.Row="1"/>
                    <Button Content="ACCEPT"  Background="#FFC107" Foreground="#2c4375" Grid.Column="4" Margin="71,15,31,-5" FontFamily="Global Serif" Height="30" FontSize="22" Grid.Row="2" Grid.ColumnSpan="2"/>
                    <Button Content="DECLINE" Background="#FFC107" Foreground="#2c4375" Grid.Column="6" Margin="40,13,62,-3" FontFamily="Global Serif" Height="30" FontSize="22" Grid.Row="2" Grid.ColumnSpan="2"/>
                </Grid>
            </Border>
            <TextBlock  Foreground="#2c4375" FontWeight="Bold" Margin="0,10,0,10"/>
            <Border Background="#EAEAEA" Padding="20" CornerRadius="10" Height="190">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>

                    <!-- Order ID -->
                    <TextBlock Text="CLIENT NAME" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Margin="0,10,0,30" Grid.RowSpan="2"/>
                    <Label Grid.Column="1" Background="White" Width="150" Height="30" Margin="5"/>

                    <!-- Client ID -->
                    <TextBlock Text="CLIENT ID" Grid.Row="1" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Margin="0,10,0,30" Grid.RowSpan="2"/>
                    <Label Grid.Row="1" Background="White" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Rate -->
                    <TextBlock Text="ARTICLE NO" Grid.Row="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Margin="0,10,0,-10"/>
                    <Label Grid.Row="2" Background="White" Grid.Column="1" Width="150" Height="30" Margin="5"/>


                    <!-- Comments -->
                    <TextBlock Text="MATERIAL" Grid.Column="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.ColumnSpan="2" Margin="37,10,143,30" Grid.RowSpan="2"/>
                    <Label Grid.Column="3" Background="White" Margin="10,5,10,30" Grid.ColumnSpan="3" Grid.RowSpan="2"/>

                    <!-- Reasons -->
                    <TextBlock Text="SIZE" Grid.Column="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.ColumnSpan="2" Margin="37,36,143,4" Grid.RowSpan="2" Grid.Row="1"/>
                    <Label Grid.Column="3" Background="White" Grid.RowSpan="2" Width="150" Height="30" Margin="20,26,10,24" Grid.Row="1"/>
                    <Button Content="ACCEPT" Background="#FFC107" Foreground="#2c4375" Grid.Column="4" Grid.ColumnSpan="2" Margin="65,6,25,4" FontFamily="Global Serif" Height="30" Grid.Row="2" FontSize="22"/>
                    <Button Content="DECLINE" Background="#FFC107" Foreground="#2c4375" Grid.Column="6" Grid.ColumnSpan="2" Margin="10,5,80,5" FontFamily="Global Serif" Height="30" Grid.Row="2"  FontSize="22"/>

                </Grid>
            </Border>
        </StackPanel>

    </Grid>
</Window>
