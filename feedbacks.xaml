<Window x:Class="WpfApp6.feedbacks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Feedback Form"
        Height="1024" Width="1920"
        Background="White">

    <Grid>
        <!-- Left Panel (Profile and Buttons) -->
        <Grid Background="#EAEAEA" Width="300" HorizontalAlignment="Left">
            <StackPanel VerticalAlignment="Top">
                <Ellipse Width="100" Height="100" Fill="Gray" Margin="100,20,100,10"/>
                <Button Content="OWAIS SHEHZAD" FontSize="16" FontFamily="Global Serif"
                        Foreground="#2c4375" HorizontalAlignment="Center" Click="ProfileButton_Click"/>

                <Button Background="#FFC107" BorderThickness="0" Content="DASHBOARD"  Foreground="#2c4375" FontFamily="Global Serif" Height="50" Margin="0,50,0,0" FontSize="24" Click="DashboardButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="MANAGE PROJECTS"  Foreground="#2c4375" FontFamily="Global Serif" Height="50" Margin="0,50,0,0" FontSize="24" Click="ManageProjectsButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="INVENTORY" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24" Click="InventoryButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="PROJECT HISTORY" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24"  Click="ProjectHistoryButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="PAYMENT MANAGEMENT" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24"  Click="PaymentManagmentButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="ORDER REQUESTS" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24"  Click="OrderRequestsButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="FEEDBACKS" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24" Click="FeedbacksButton_Click" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <StackPanel Margin="412,60,308,40" Width="1200">
            <TextBlock Text="FEEDBACKS" FontSize="32" FontFamily="Global Serif"
                       Foreground="#2c4375" FontWeight="Bold" Margin="0,20,0,10"/>

            <!-- Feedback Form -->
            <Border Background="#EAEAEA" Padding="20" CornerRadius="10" Height="247" Width="1210">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Project ID -->
                    <TextBlock Text="ORDER ID" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.Row="0" Grid.Column="0" Margin="5"/>
                    <Label x:Name="OrderIdLabel" Background="White" Grid.Row="0" Grid.Column="1" Height="30" Margin="5"/>

                    <!-- Client ID -->
                    <TextBlock Text="CLIENT ID" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.Row="1" Grid.Column="0" Margin="5"/>
                    <Label x:Name="ClientIdLabel" Background="White" Grid.Row="1" Grid.Column="1" Height="30" Margin="5"/>

                    <!-- Rating -->
                    <TextBlock Text="RATE" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.Row="2" Grid.Column="0" Margin="5"/>
                    <Label x:Name="RateLabel" Background="White" Grid.Row="2" Grid.Column="1" Height="30" Margin="5"/>

                    <!-- Comments -->
                    <TextBlock Text="COMMENTS" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Top"/>
                    <Label x:Name="CommentsLabel" Background="White" Grid.Row="3" Grid.Column="1" Height="80" Margin="5" VerticalAlignment="Top" Padding="5"/>
                </Grid>
            </Border>
            <StackPanel Width="1200" Height="908">
                <!-- Feedback Form -->

                <!-- Feedback Form -->

                <!-- Feedback Form -->
                <Border Background="#EAEAEA" Padding="20" CornerRadius="10" Height="239">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Project ID -->
                        <TextBlock Text="ORDER ID" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.Row="0" Grid.Column="0" Margin="5"/>
                        <Label x:Name="OrderIdLabel1" Background="White" Grid.Row="0" Grid.Column="1" Height="30" Margin="5"/>

                        <!-- Client ID -->
                        <TextBlock Text="CLIENT ID" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.Row="1" Grid.Column="0" Margin="5"/>
                        <Label x:Name="ClientIdLabel1" Background="White" Grid.Row="1" Grid.Column="1" Height="30" Margin="5"/>

                        <!-- Rating -->
                        <TextBlock Text="RATE" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.Row="2" Grid.Column="0" Margin="5"/>
                        <Label x:Name="RateLabel1" Background="White" Grid.Row="2" Grid.Column="1" Height="30" Margin="5"/>

                        <!-- Comments -->
                        <TextBlock Text="COMMENTS" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Top"/>
                        <Label x:Name="CommentsLabel1" Background="White" Grid.Row="3" Grid.Column="1" Height="80" Margin="5" VerticalAlignment="Top" Padding="5"/>
                    </Grid>
                </Border>
                <StackPanel Width="1200" Height="908">
                    <!-- Feedback Form -->
                    <!-- Feedback Form -->
                    <!-- Feedback Form -->
                    <Border Background="#EAEAEA" Padding="20" CornerRadius="10" Height="237">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Project ID -->
                            <TextBlock Text="ORDER ID" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.Row="0" Grid.Column="0" Margin="5"/>
                            <Label x:Name="OrderIdLabel2" Background="White" Grid.Row="0" Grid.Column="1" Height="30" Margin="5"/>

                            <!-- Client ID -->
                            <TextBlock Text="CLIENT ID" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.Row="1" Grid.Column="0" Margin="5"/>
                            <Label x:Name="ClientIdLabel2" Background="White" Grid.Row="1" Grid.Column="1" Height="30" Margin="5"/>

                            <!-- Rating -->
                            <TextBlock Text="RATE" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.Row="2" Grid.Column="0" Margin="5"/>
                            <Label x:Name="RateLabel2" Background="White" Grid.Row="2" Grid.Column="1" Height="30" Margin="5"/>

                            <!-- Comments -->
                            <TextBlock Text="COMMENTS" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Top"/>
                            <Label x:Name="CommentsLabel2" Background="White" Grid.Row="3" Grid.Column="1" Height="80" Margin="5" VerticalAlignment="Top" Padding="5"/>
                        </Grid>
                    </Border>
                    <TextBlock FontSize="32" FontFamily="Global Serif"
                        Foreground="#2c4375" FontWeight="Bold" Margin="0,20,0,10"/>

                    <!-- Feedback Form -->
                </StackPanel>

                <!-- Feedback Form -->
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
