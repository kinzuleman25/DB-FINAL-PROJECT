<Window x:Class="WpfApp6.feedbacks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Feedback Form"
        Height="1024" Width="1920"
        Background="White">

    <Grid>
        <!-- Left Panel (Profile and Buttons) -->
        <Grid Background="#EAEAEA" Width="300" HorizontalAlignment="Left">
            <StackPanel VerticalAlignment="Top">
                <!-- Profile Section -->
                <Ellipse Width="100" Height="100" Fill="Gray" Margin="100,20,100,10"/>
                <Button Content="OWAIS SHEHZAD" FontSize="16" FontFamily="Global Serif"
Foreground="#2c4375" HorizontalAlignment="Center" Click="ProfileButton_Click"/>

                <!-- Yellow Buttons -->
                <Button Background="#FFC107" BorderThickness="0" Content="DASHBOARD"  Foreground="#2c4375" FontFamily="Global Serif" Height="50" Margin="0,50,0,0" FontSize="24" Click="DashboardButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="MANAGE PROJECTS"  Foreground="#2c4375" FontFamily="Global Serif" Height="50" Margin="0,50,0,0" FontSize="24" Click="ManageProjectsButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="INVENTORY" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24" Click="InventoryButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="PROJECT HISTORY" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24"  Click="ProjectHistoryButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="PAYMENT MANAGEMENT" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24"  Click="PaymentManagmentButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="ORDER REQUESTS" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24"  Click="OrderRequestsButton_Click" FontWeight="Bold"/>
                <Button Background="#FFC107"  BorderThickness="0"  Content="FEEDBACKS" Height="50" Foreground="#2c4375" FontFamily="Global Serif" Margin="0,50,0,0" FontSize="24" Click="FeedbacksButton_Click" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <StackPanel Margin="320,50,20,50">
            <TextBlock Text="FEEDBACKS" FontSize="32" FontFamily="Global Serif"
                       Foreground="#2c4375" FontWeight="Bold" Margin="0,20,0,10"/>

            <!-- Feedback Form -->
            <Border Background="#EAEAEA" Padding="20" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>

                    <!-- Order ID -->
                    <TextBlock Text="ORDER ID" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16"/>
                    <Label Background="White" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Client ID -->
                    <TextBlock Text="CLIENT ID" Grid.Row="1" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16"/>
                    <Label Background="White" Grid.Row="1" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Rate -->
                    <TextBlock Text="RATE" Grid.Row="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16"/>
                    <Label Background="White" Grid.Row="2" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Comments -->
                    <TextBlock Text="COMMENTS" Grid.Column="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Margin="0,10,0,30" Grid.RowSpan="2" Grid.Row="1"/>
                    <Label Background="White" Grid.Column="3" Grid.RowSpan="3" Height="80" Margin="15,20,-228,20" Grid.ColumnSpan="5"/>

                    <!-- Reasons -->
                </Grid>
            </Border>
            <TextBlock  Foreground="#2c4375" FontWeight="Bold" Margin="0,10,0,10"/>
            <Border Background="#EAEAEA" Padding="20" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>

                    <!-- Order ID -->
                    <TextBlock Text="ORDER ID" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16"/>
                    <Label Background="White" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Client ID -->
                    <TextBlock Text="CLIENT ID" Grid.Row="1" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16"/>
                    <Label Background="White" Grid.Row="1" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Rate -->
                    <TextBlock Text="RATE" Grid.Row="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16"/>
                    <Label Background="White" Grid.Row="2" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Comments -->
                    <TextBlock Text="COMMENTS" Grid.Column="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.ColumnSpan="2" Margin="10,0,170,0" Grid.Row="1"/>
                    <Label Background="White" Grid.Column="3" Grid.RowSpan="3" Height="80" Margin="15,20,-225,20" Grid.ColumnSpan="5"/>

                    <!-- Reasons -->
                </Grid>
            </Border>
            <TextBlock  Foreground="#2c4375" FontWeight="Bold" Margin="0,10,0,10"/>
            <Border Background="#EAEAEA" Padding="20" CornerRadius="10" Height="190">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>

                    <!-- Order ID -->
                    <TextBlock Text="ORDER ID" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16"/>
                    <Label Background="White" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Client ID -->
                    <TextBlock Text="CLIENT ID" Grid.Row="1" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16"/>
                    <Label Background="White" Grid.Row="1" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Rate -->
                    <TextBlock Text="RATE" Grid.Row="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16"/>
                    <Label Background="White" Grid.Row="2" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Comments -->
                    <TextBlock Text="COMMENTS" Grid.Column="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.ColumnSpan="2" Margin="10,0,170,0" Grid.Row="1"/>
                    <Label Background="White" Grid.Column="3" Grid.RowSpan="3" Height="80" Margin="15,20,-226,20" Grid.ColumnSpan="5"/>

                    <!-- Reasons -->
                </Grid>
            </Border>
            <TextBlock  Foreground="#2c4375" FontWeight="Bold" Margin="0,10,0,10"/>
            <Border Background="#EAEAEA" Padding="20" CornerRadius="10" Height="190" Margin="0,10,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>

                    <!-- Order ID -->
                    <TextBlock Text="ORDER ID" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16"/>
                    <Label Background="White" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Client ID -->
                    <TextBlock Text="CLIENT ID" Grid.Row="1" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16"/>
                    <Label Background="White" Grid.Row="1" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Rate -->
                    <TextBlock Text="RATE" Grid.Row="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16"/>
                    <Label Background="White" Grid.Row="2" Grid.Column="1" Width="150" Height="30" Margin="5"/>

                    <!-- Comments -->
                    <TextBlock Text="COMMENTS" Grid.Column="2" FontFamily="Global Serif" Foreground="#2c4375" FontSize="16" Grid.ColumnSpan="2" Margin="10,0,170,0" Grid.Row="1"/>
                    <Label Background="White" Grid.Column="3" Grid.RowSpan="3" Height="80" Margin="15,20,-238,20" Grid.ColumnSpan="5"/>

                    <!-- Reasons -->
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Window>
