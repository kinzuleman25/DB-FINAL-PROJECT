<Window x:Class="WpfApp6.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="SignUp" Height="1080" Width="1920">
    <Window.Background>
        <ImageBrush ImageSource="/Assets/background.png"/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/background.png"/>
        </Grid.Background>
        <Label Content="Sign Up" HorizontalAlignment="Left" Margin="904,118,0,0" VerticalAlignment="Top" Height="68" Width="216" Foreground="#FF2C4375" FontFamily="Global Serif" FontSize="48" FontWeight="Bold"/>
        <Label HorizontalAlignment="Left" Margin="475,248,0,0" VerticalAlignment="Top" Height="44" Width="226" FontFamily="Global Serif" FontSize="36" FontWeight="Bold" Foreground="#FF2C4375"/>

        <Label Content="First Name" HorizontalAlignment="Left" Margin="333,300,0,0" VerticalAlignment="Top" Width="237" Height="52" FontFamily="Global Serif" FontSize="30" FontWeight="Bold" Foreground="#FF2C4375"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="333,377,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="491" Height="50" Background="White" FontFamily="Global Serif" FontSize="28" Foreground="#FF2C4375" BorderBrush="#FF2C4375" BorderThickness="3" TextChanged="TextBox_TextChanged_4"/>


        <Label Content="Last Name" HorizontalAlignment="Left" Margin="1148,300,0,0" VerticalAlignment="Top" Height="50" Width="200" FontSize="30" FontFamily="Global Serif" FontWeight="Bold" Foreground="#FF2C4375"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="1148,377,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="492" Height="52" BorderThickness="3" FontSize="28" FontFamily="Global Serif" Foreground="#FF2C4375" BorderBrush="#FF2C4375"/>

        <Label Content="Username" HorizontalAlignment="Left" Margin="333,451,0,0" VerticalAlignment="Top" Width="258" Height="52" FontSize="30" FontFamily="Global Serif" Foreground="#FF2C4375" FontWeight="Bold"/>
        <TextBox x:Name="PhoneTextBox" HorizontalAlignment="Left" Margin="333,514,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="495" Height="54" BorderBrush="#FF2C4375" BorderThickness="3" FontSize="28" FontFamily="Global Serif" Foreground="#FF2C4375" TextChanged="TextBox_TextChanged_2"/>

        <Label Content="Phone Number" HorizontalAlignment="Left" Margin="1148,457,0,0" VerticalAlignment="Top" Width="258" Height="52" Foreground="#FF2C4375" FontFamily="Global Serif" FontSize="30" FontWeight="Bold"/>
        <TextBox x:Name="CNICTextBox" HorizontalAlignment="Left" Margin="1148,514,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="492" Height="54" BorderBrush="#FF2C4375" BorderThickness="3" FontFamily="Global Serif" FontSize="28" Foreground="#FF2C4375"/>

        <Label Content="Address" HorizontalAlignment="Left" Margin="330,611,0,0" VerticalAlignment="Top" Width="258" Height="52" FontFamily="Global Serif" FontSize="30" FontWeight="Bold" Foreground="#FF2C4375"/>
        <TextBox x:Name="AddressTextBox" HorizontalAlignment="Left" Margin="330,668,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="918" Height="54" BorderThickness="3" FontFamily="Global Serif" FontSize="28" Foreground="#FF2C4375" BorderBrush="#FF2C4375" TextChanged="TextBox_TextChanged_3"/>

        <Label Content="Gender" HorizontalAlignment="Left" Margin="1424,611,0,0" VerticalAlignment="Top" Width="200" Height="52" FontFamily="Global Serif" FontSize="30" FontWeight="Bold" Foreground="#FF2C4375"/>
        <TextBox x:Name="GenderTextBox" HorizontalAlignment="Left" Margin="1440,668,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="54" Foreground="#FF2C4375" FontSize="28" FontFamily="Global Serif" BorderBrush="#FF2C4375" BorderThickness="3"/>

        <Label Content="Create Password" HorizontalAlignment="Left" Margin="330,756,0,0" VerticalAlignment="Top" Width="286" Height="52" Foreground="#FF2C4375" FontFamily="Global Serif" FontSize="30" FontWeight="Bold"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="330,823,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="498" Height="54" Foreground="#FF2C4375" BorderBrush="#FF2C4375" FontFamily="Global Serif" FontSize="28" BorderThickness="3" TextChanged="TextBox_TextChanged_5"/>

        <Label Content="Confirm Password" HorizontalAlignment="Left" Margin="1148,756,0,0" VerticalAlignment="Top" Width="338" Height="52" Foreground="#FF2C4375" FontFamily="Global Serif" FontSize="30" FontWeight="Bold"/>
        <TextBox x:Name="ConfirmPasswordTextBox" HorizontalAlignment="Left" Margin="1140,823,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" Height="54" FontFamily="Global Serif" FontSize="28" BorderBrush="#FF2C4375" BorderThickness="3"/>

        <Button x:Name="SignUpButton" Content="Sign Up" Click="SignUpButton_Click" HorizontalAlignment="Left" Height="78" Margin="872,911,0,0" VerticalAlignment="Top" Width="280" FontFamily="Global Serif" FontSize="40" FontWeight="Bold" Foreground="#FF2C4375" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="Assets/signsignup.png"/>
            </Button.Background>
        </Button>
        <RichTextBox Width="200" Height="200" Margin="1623,52,97,812" RenderTransformOrigin="2.269,-0.23">
            <RichTextBox.Clip>
                <EllipseGeometry Center="100,100" RadiusX="100" RadiusY="100"/>
            </RichTextBox.Clip>
        </RichTextBox>
        <Label Content="Add Photo" HorizontalAlignment="Left" Margin="1647,277,0,0" VerticalAlignment="Top" Height="49" Width="176" Foreground="#FF2C4375" FontFamily="Global Serif" FontSize="32" FontWeight="Bold" RenderTransformOrigin="0.42,0.049"/>
        <TextBox x:Name="ClientIDTextBox" HorizontalAlignment="Center" Margin="0,541,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Height="64" BorderBrush="#FF2C4375" BorderThickness="3" FontSize="28" FontFamily="Global Serif" Foreground="#FF2C4375" TextChanged="TextBox_TextChanged_2"/>
    </Grid>
</Window>
